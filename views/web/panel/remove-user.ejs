<!-- remove-user.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Remove User</title>
    <%- include('../partials/head'); -%>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <%- include('../partials/loader'); -%>
    <%- include('../partials/navbar'); -%>
    <h1>Remove User</h1>

    <form method="POST" action="/admin/remove/<%= discordId %>">
      <label for="discordId">Discord ID:</label>
      <input type="text" id="discordId" name="discordId" value="<%= discordId %>">
      <input type="hidden" id="discordIdHidden" name="discordIdHidden" value="<%= discordId %>">
      <br>
      <button type="submit">Remove User</button>
    </form>
    <%- include('../partials/footer'); -%>

  </body>
</html>
